<% layout("/layouts/boilerplate") %>
<div class="row  mt-2">
    <h1 class="col-5 offset-3  mt-2 mb-2"><b>Login on Wanderlust</b></h1>
  <div class="col-5 offset-3">
<form method="post" action="/login" class="needs-validation" novalidate>
 <div class="mb-2" >
     <label for="username"  class="form-label">Username</label>
     <input type="text" name="username" placeholder="enter username" id="username" class="form-control" required >
  </div>

 <div class="mb-2" >
     <label for="password"  class="form-label">Password</label>
     <input type="password" placeholder="enter password"  name="password" id="password" class="form-control" required >
     
 </div>
 <button class="btn btn-success ">Login</button>
</form>
</div>
</div>