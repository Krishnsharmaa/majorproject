<% layout("/layouts/boilerplate") %>
                  <div class="row  mt-2">
                   <h1 class="col-5 offset-3  mt-2 mb-2"><b>SignUp on Wanderlust</b></h1>
                 <div class="col-5 offset-3">
              <form method="post" action="/signup" class="needs-validation" novalidate>
                <div class="mb-2" >
                    <label for="username"  class="form-label">Username</label>
                    <input type="text" name="username" placeholder="enter username" id="username" class="form-control" required >
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Correct it Please!</div>
                </div>
                <div class="mb-2" >
                    <label for="email"  class="form-label">Email</label>
                    <input type="email"  name="email" placeholder="enter email" id= "email" class="form-control" required >
                    <!-- <div class="valid-feedback">looks good!</div> -->
                    <div class="invalid-feedback">Correct it Please!</div>
                </div>
                <div class="mb-2" >
                    <label for="password"  class="form-label">Password</label>
                    <input type="password" placeholder="enter password"  name="password" id="password" class="form-control" required >
                    <div class="valid-feedback">looks good!</div>
                    <div class="invalid-feedback">Correct it Please!</div>
                </div>
                <button class="btn btn-success ">SignUp</button>
        </form>
        </div>
    </div>